* {
  box-sizing: border-box;
}

html {
  padding: 0;
  font-family: sans-serif;
  background: var(--light-grey);
}
body {
  margin: 0;
  width: 25rem;
  min-height: 10rem;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
}

c-icon {
    display: inline-flex;
    align-items: center;
}

c-icon svg {
    display: inline-block;
    width: 1rem;
    height: 1rem;
}

.green:hover{
    background:#00e673;
}

*[hidden] {
  display: none;
}


select {
  width: 100%;
}
