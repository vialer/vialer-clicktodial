{
  "name": "click-to-dial",
  "version": "1.0",
  "description": "Click and dial numbers on webpages",
  "permissions": [
    "activeTab",
    "https://partner.voipgrid.nl/api/*"
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "brand/logo-16.png",
      "32": "brand/logo-32.png",
      "48": "brand/logo-64.png",
      "128": "brand/logo-128.png"
    }
  },
  "icons": {
    "16": "brand/logo-16.png",
    "32": "brand/logo-32.png",
    "48": "brand/logo-64.png",
    "128": "brand/logo-128.png"
  },
  "manifest_version": 2
}
