{
  "name": "click-to-dial",
  "version": "0.1",
  "description": "Click and dial numbers on webpages",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "https://api.segment.io/*",
    "https://partner.voipgrid.nl/api/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "brand/logo-16.png",
      "32": "brand/logo-32.png",
      "48": "brand/logo-64.png",
      "128": "brand/logo-128.png"
    }
  },
  "icons": {
    "16": "brand/logo-16.png",
    "32": "brand/logo-32.png",
    "48": "brand/logo-64.png",
    "128": "brand/logo-128.png"
  },
  "web_accessible_resources": [
    "icons/phone.png"
  ],
  "manifest_version": 2
}